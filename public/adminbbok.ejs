<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="./css/adminbbok.css">

</head>

<body>
    <!------------------------------------------------------------------------------------- Navbar -------------------------------------------------------------------->
    <nav class="navbar">
        <h1>Admin Dashboard</h1>
        <ul class="nav-links">
            <li><a href="/adminhome">Home</a></li>
        </ul>
    </nav>

    <!------------------------------------------------------------------ NAVBAR END ---------------------------------------------------------------------------------->


    <!---------------------------------------------------------------------- Admin Panel ------------------------------------------------------------------------------->
    <div class="container">
        <h1>User Order</h1>


        <div class="search-container">
            <input type="text" id="searchInput" placeholder="Search by email or date" autocomplete="off">
            <button id="searchButton">Search</button>
        </div>


        <div class="search-results" id="searchResults"></div>

        <!--------------------------------------------------------------- Table of User order  Data ---------------------------------------------------------------->
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Class</th>
                    <th>Email</th>
                    <th>Contact</th>
                    <th>Items</th>
                    <th>Total</th>
                    <th>Rental Days</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% userData.forEach(user=> { %>
                    <tr>
                        <td>
                            <%= user.id %>
                        </td>
                        <td>
                            <%= user.name %>
                        </td>
                        <td>
                            <%= user.clas %>
                        </td>
                        <td>
                            <%= user.email %>
                        </td>
                        <td>
                            <%= user.contact %>
                        </td>
                        <td>
                            <%= user.items %>
                        </td>
                        <td>
                            â‚¹<%= user.total %>
                        </td>
                        <td>
                            <%= user.rentalDays %>
                        </td>
                        <td>
                            <%= user.orderDate %>
                        </td>
                        <td id="status_<%= user.id %>">
                            <%= user.status %>
                        </td>
                        <td>
                            <button class="update-status-button" onclick="updateStatus('<%= user.id %>')">Update
                                Status</button>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

    <!---------------------------------------------------------------- JavaScript for search --------------------------------------------------------------------->
   <script src="./js/adminbbok.js"></script>


</body>

</html>