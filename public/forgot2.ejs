              } else {
                  // Handle JSON response or other scenarios
                  return response.json();
              }
          })
          .then((data) => {
              // Handle JSON data if needed
          })
          .catch((error) => {
              console.error("Forgot error:", error);
              // Handle error scenarios
          });
        };
        </script>
</body>

</html>