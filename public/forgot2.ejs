              otp: otp,
          };
        
          fetch("http://localhost:8002/forgott", {
              method: "POST",
              headers: {
                  "Content-Type": "application/json",
              },
              body: JSON.stringify(userData),
          })
          .then((response) => {
              if (response.redirected) {
                  // If the response is a redirect, manually redirect the client
