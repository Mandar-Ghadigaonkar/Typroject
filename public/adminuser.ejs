<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="./css/adminuser.css">
</head>
<body>


<!------------------------------------------------------------------- navbar ------------------------------------------------------------------>

<nav class="navbar">
    <h1>Admin Dashboard</h1>
    <ul class="nav-links">
        <li><a href="/adminhome">Home</a></li>
    </ul>
</nav>

<!------------------------------------------------------------- user data table --------------------------------------------------------------->

<section id="userData">
    <h2>User Data</h2>
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Class</th>
            <th>Email</th>
            <th>Contact</th>
        </tr>
        </thead>
        <tbody>
        <% userData.forEach(user => { %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.clas %></td>
            <td><%= user.email %></td>
            <td><%= user.contact %></td>
        </tr>
        <% }); %>
        </tbody>
    </table>
</section>
</body>
</html>
